@model IEnumerable<Sistema_JYR.Models.CategoriasProducto>

@{
    ViewBag.Title = "Mantenimiento Categorías de Productos";
}

    <ol class="breadcrumb container-fluid">
        <li class="breadcrumb-item"> @Html.ActionLink("Inicio", "Index", "Home") </li>
        <li class="breadcrumb-item active">Mantenimientos</li>
        <li class="breadcrumb-item active">Inventario</li>
        <li class="breadcrumb-item active">Mantenimiento Categorías de Producto</li>
    </ol>

<h2>Mantenimiento Categorías de Productos</h2>

<div class="container" style="margin-bottom: 2%; padding-top: 5px; padding-bottom: 5px">
    @Html.ActionLink("Crear nueva categoría", "Create", new { }, new { @class = "btn btn-dark" })
</div>
<div class="container" style="text-align: center">
    <table class="table table-striped table-hover table-bordered table-responsive-lg">
        <tr class="thead-dark">
            <th>
                Nombre
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-dark" })
                </td>
            </tr>
        }

    </table>
</div>
