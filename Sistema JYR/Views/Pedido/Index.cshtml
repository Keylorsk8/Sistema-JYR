@if (Session["Pedido"] != null)
{
    switch (Session["Pedido"])
    {

        case "Pedido inválido. Especifique un pedido":
            <script type="text/javascript">
                function EdicionPed() {
                    Swal.fire({
                        title: 'Pedido inválido. Especifique un pedido',
                        icon: 'warning',
                        toast: false,
                        timer: 4000,
                        timerProgressBar: true
                    });
