@model IEnumerable<Sistema_JYR.Models.Productos>

@{
    ViewBag.Title = "Mantenimiento Productos";
}

<ol class="breadcrumb container-fluid">
    <li class="breadcrumb-item"> @Html.ActionLink("Inicio", "Index", "Home") </li>
    <li class="breadcrumb-item active">Mantenimientos</li>
    <li class="breadcrumb-item active">Inventario</li>
    <li class="breadcrumb-item active">Mantenimiento Productos</li>
</ol>


@using (Ajax.BeginForm("filtrarProductosAjax", "Material", new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "divMateriales",
    InsertionMode = InsertionMode.Replace

}))
{
    <div class="container">

        <div class="row">
            <div class="col-lg-6">
                <h2>Mantenimiento Productos</h2>
            </div>
            <div class="col-lg-6">
                @Html.ActionLink("Crear Nuevo Producto", "Create", new { }, new { @class = "btn btn-dark btn-block" })
            </div>
        </div>
        <div class="row" style="margin: 2%">
            <div class="col-md-1">
                Filtro:
            </div>
            <div class="col-md-9">
                @Html.TextBox("terminoBusqueda", "", new { @class = "form-control", @placeholder = "Criterio de búsqueda" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Buscar" class="btn btn-dark btn-block" />
            </div>
        </div>
    </div>}

<hr />

<div class="container" style="margin-bottom: 2%; padding-top: 5px; padding-bottom: 5px">

</div>


<div class="container" style="text-align: center">
    <table class="table table-striped table-hover table-bordered table-responsive-lg">
        <tr class="thead-dark">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.Label("Categoría")
            </th>
            <th>
                @Html.Label("Stock")
            </th>
            <th>
                @Html.Label("UM")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Impuesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriasProducto.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadEnInventario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnidadDeMedida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Impuesto) %
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-dark" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-dark" })
                </td>
            </tr>
        }

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="9">
                    No hay elementos
                </td>
            </tr>
        }

    </table>
</div>