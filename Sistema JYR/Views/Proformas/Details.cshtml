@model Sistema_JYR.Models.Proformas

@{
    ViewBag.Title = "Detalle Proforma";
}

    <ol class="breadcrumb container-fluid">
        <li class="breadcrumb-item"> @Html.ActionLink("Inicio", "Index", "Home") </li>
        <li class="breadcrumb-item active">Mantenimientos</li>
        <li class="breadcrumb-item active">Proforma</li>
        <li class="breadcrumb-item active">Mantenimiento Proforma</li>
        <li class="breadcrumb-item active">Detalle</li>
    </ol>

<div>
    <h4>Proformas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>



        <dt>
           Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUsers.Nombre)
            @Html.DisplayFor(model => model.AspNetUsers.Apellido1)
            @Html.DisplayFor(model => model.AspNetUsers.Apellido2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalDescuento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalDescuento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalImpuesto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalImpuesto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TotalPagar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPagar)
        </dd>

        <dt>
     Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstadoProforma.Descripcion)
        </dd>

    </dl>
</div>
<div class="panel panel-default">
    <div class="panel-heading" style="font-weight:bold; margin-bottom:7px">Detalle</div>

    <div class="container" style="text-align: center">
        <table class="table table-striped table-hover table-bordered table-responsive-lg">
            <tr>
                <th>
                    Producto
                </th>
                <th>
                    Precio Unitario
                </th>
                <th>
                    Descuento
                </th>
                <th>
                    Cantidad
                </th>
            </tr>

            @foreach (var c in Model.ProformaDetalle)
            {
                <tr>
                    <td>
                        @c.Productos.Nombre
                    </td>
                    <td>
                        @c.PrecioUnitario
                    </td>
                    <td>
                        @c.Descuento
                    </td>
                    <td>
                        @c.Cantidad
                    </td>
                </tr>


            }

        </table>
    </div>
</div>
<p>

    <a class="btn btn-dark btn-block" href="@Url.Action("Edit",new {id = Model.Id })">
        <i class="fa fa-pencil-square-o" style="margin-right:5px"></i>Editar
    </a>
    <a class="btn btn-dark btn-block" href="@Url.Action("Index",new {})">
        <i class="fa fa-undo" style="margin-right:5px"></i>Volver
    </a>
</p>