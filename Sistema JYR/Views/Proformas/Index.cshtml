@model IEnumerable<Sistema_JYR.Models.Proformas>

@{
    ViewBag.Title = "Mantenimiento Proformas";
}

<ol class="breadcrumb container-fluid">
    <li class="breadcrumb-item"> @Html.ActionLink("Inicio", "Index", "Home") </li>
    <li class="breadcrumb-item active">Mantenimientos</li>
    <li class="breadcrumb-item active">Proforma</li>
    <li class="breadcrumb-item active">Mantenimiento Proformas</li>
</ol>

@using (Ajax.BeginForm("filtrarProformasAjax", "Proformas", new AjaxOptions

{
    HttpMethod = "GET",
    UpdateTargetId = "divProformas",
    InsertionMode = InsertionMode.Replace

}))
{
    <div class="container">

        <div class="row">
            <div class="col-lg-6">
                <h2><i class="fa fa-list-ul" style="margin-right: 2px"></i>Mantenimiento Proformas</h2>
            </div>
            <div class="col-lg-6">
                <a class="btn btn-dark btn-block" href="@Url.Action("",new {})">
                    <i class="fa fa-plus" style="margin-right:5px"></i>Crear Nuevo Pedido
                </a>

            </div>
        </div>
        <div class="row" style="margin: 2%">
            <div class="col-md-1">
                Filtro:
            </div>
            <div class="col-md-7">
                @Html.TextBox("terminoBusqueda", "", new { @class = "form-control", @placeholder = "Criterio de búsqueda" })
            </div>

            <div class="col-md-2">
                <button type="submit" value="Buscar" class="btn btn-dark btn-block"><i class="fa fa-search"></i></button>
            </div>
            <div class="col-md-2">
                <a class="btn btn-danger btn-block" href="@Url.Action("Index")">
                    <i class="fa fa-trash-o"></i>
                </a>
            </div>
        </div>
    </div>}

<hr />

<div class="container-fluid" style="text-align: center" id="divProformas">
    <table class="table table-striped table-hover table-bordered table-responsive-lg">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>

            <th>
                Usuario
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TotalDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalImpuesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPagar)
            </th>
            <th>
                Estado
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUsers.Nombre)
                </td>

                <td>
                    ₡@Html.DisplayFor(modelItem => item.TotalDescuento)
                </td>
                <td>
                    ₡@Html.DisplayFor(modelItem => item.TotalImpuesto)
                </td>
                <td>
                    ₡@Html.DisplayFor(modelItem => item.TotalPagar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoProforma.Descripcion)
                </td>
                <td>
                    <a class="btn btn-dark" href="@Url.Action("Edit",new { id = item.Id })">
                        <i class="fa fa-pencil-square-o"></i>Editar
                    </a>
                    <a class="btn btn-dark" href="@Url.Action("Details",new { id = item.Id })">
                        <i class="fa fa-info-circle"></i>Detalles
                    </a>

                </td>
            </tr>
        }    @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="9">
                    No hay elementos
                </td>
            </tr>
        }
    </table>
</div>


@if (Session["Proforma"] != null)
{
    switch (Session["Proforma"])
    {
      
        case "Proforma inválida. Especifique una proforma":
            <script type="text/javascript">
                function EdicionProforma() {
                    Swal.fire({
                        title: 'Proforma inválida. Especifique una proforma',
                        icon: 'warning',
                        toast: false,
                        timer: 4000,
                        timerProgressBar: true
                    });
                };
                EdicionProforma();
            </script>
            Session["Proforma"] = null;
            break;
        default:
            break;
    }
}

@if (Session["Proforma"] != null)
{
    switch (Session["Proforma"])
    {
        case "No existe la proforma":
            <script type="text/javascript">
                function ExistenciaProdforma() {
                    Swal.fire({
                        title: 'No existe la proforma',
                        icon: 'warning',
                        toast: false,
                        timer: 4000,
                        timerProgressBar: true
                    });
                };
                ExistenciaProdforma();
            </script>
            Session["Proforma"] = null;
            break;

        default:
            break;
    }
}